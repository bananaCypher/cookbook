<%= form_for @category do |f| %>
  <table>
    <tr>
      <td>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :description %>
        <%= f.text_area :description %>
      </td>
    </tr>
    <tr>
      <td><%= f.submit 'Update Category' %></td>
    </tr>
  </table>
<% end %>